{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* IMPORTANT: Enables Cloudflare Worker types */
    "types": ["@cloudflare/workers-types"]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
